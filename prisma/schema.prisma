generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AudioAsset {
  id             String   @id
  name           String
  url            String
  tags           String?
  category       String
  duration       Int?
  description    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  sourceType     String   @default("file")
  soundboardSlot Int?
}

model Campaign {
  id          String    @id
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  Chapter     Chapter[]
  Session     Session[]
}

model Chapter {
  id         String   @id
  campaignId String
  title      String
  content    String
  order      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  Campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
}

model Combat {
  id         String       @id
  sessionId  String?
  name       String
  round      Int          @default(1)
  isActive   Boolean      @default(true)
  outcome    String?
  notes      String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime
  phase      String       @default("setup")
  Session    Session?     @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  Initiative Initiative[]
}

model EventNote {
  id              String        @id
  timelineEventId String
  content         String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime
  TimelineEvent   TimelineEvent @relation(fields: [timelineEventId], references: [id], onDelete: Cascade)
}

model ImageAsset {
  id          String   @id
  name        String
  url         String
  tags        String?
  category    String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model Initiative {
  id             String   @id
  combatId       String
  name           String
  initiativeRoll Int
  armorClass     Int?
  maxHp          Int?
  isPlayer       Boolean  @default(false)
  isActive       Boolean  @default(true)
  conditions     String?
  notes          String?
  order          Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  damageTaken    Int      @default(0)
  Combat         Combat   @relation(fields: [combatId], references: [id], onDelete: Cascade)
}

model MagicalItem {
  id                 String   @id
  name               String
  slot               String
  rarity             String   @default("common")
  stats              String?
  description        String?
  imageUrl           String?
  isActive           Boolean  @default(true)
  isPublished        Boolean  @default(false)
  visibleToPlayerIds String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime
}

model NewsPost {
  id          String    @id
  title       String
  content     String
  excerpt     String?
  audioUrl    String?
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
}

model Note {
  id        String   @id
  title     String
  content   String
  category  String?
  tags      String?
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model PlannerItem {
  id        String   @id
  sessionId String?
  type      String
  title     String
  content   String
  order     Int
  shown     Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime
  Session   Session? @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Player {
  id                                  String   @id
  name                                String   @unique
  maxHp                               Int?
  armorClass                          Int?
  isActive                            Boolean  @default(true)
  order                               Int      @default(0)
  createdAt                           DateTime @default(now())
  updatedAt                           DateTime
  alignment                           String?
  avatarUrl                           String?
  background                          String?
  charisma                            Int      @default(10)
  className                           String?
  constitution                        Int      @default(10)
  currentHp                           Int?
  dexterity                           Int      @default(10)
  equipment                           String?
  features                            String?
  inspiration                         Boolean  @default(false)
  intelligence                        Int      @default(10)
  level                               Int      @default(1)
  notes                               String?
  proficiency                         Int      @default(2)
  race                                String?
  speed                               Int      @default(30)
  spells                              String?
  strength                            Int      @default(10)
  wisdom                              Int      @default(10)
  backgroundUrl                       String?
  className2                          String?
  level2                              Int      @default(0)
  subclass           String?
  subclass2          String?
  skillProficiencies String?
  jackOfAllTrades    Boolean  @default(false)
  primaryUser        User?    @relation("UserPrimaryPlayer")
  secondaryUser      User?    @relation("UserSecondaryPlayer")
}

model Session {
  id            String          @id
  campaignId    String?
  sessionNumber Int
  title         String
  date          DateTime
  notes         String?
  summary       String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  status        String          @default("prep")
  Combat        Combat[]
  PlannerItem   PlannerItem[]
  Campaign      Campaign?       @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  TimelineEvent TimelineEvent[]
}

model Sound {
  id        String   @id
  name      String
  category  String
  url       String
  duration  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model TimelineEvent {
  id          String      @id
  sessionId   String
  order       Int
  title       String
  description String?
  soundUrls   String?
  completed   Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime
  imageUrls   String?
  EventNote   EventNote[]
  Session     Session     @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model User {
  id                String   @id
  username          String   @unique
  password          String
  role              String   @default("player")
  name              String
  createdAt         DateTime @default(now())
  updatedAt         DateTime
  playerId          String?  @unique
  secondaryPlayerId String?  @unique
  player            Player?  @relation("UserPrimaryPlayer", fields: [playerId], references: [id])
  secondaryPlayer   Player?  @relation("UserSecondaryPlayer", fields: [secondaryPlayerId], references: [id])
  Quest             Quest[]
}

model Quest {
  id              String    @id
  title           String
  description     String?
  type            String    @default("personal") // "official" or "personal"
  status          String    @default("active") // "active", "completed"
  priority        String    @default("normal") // "low", "normal", "high", "urgent"
  isPublic        Boolean   @default(false) // For personal quests: public = visible to all, private = only creator
  reward          String?
  isTimeSensitive Boolean   @default(false)
  timeConstraint  String?
  createdBy       String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime
  completedAt     DateTime?
  User            User      @relation(fields: [createdBy], references: [id], onDelete: Cascade)
}
